.cover{
  position: relative;
}

.cover image, .cover video {
  height:45vh;
}

.cover .content{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 25px 10px;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  color: rgba(0, 0, 0, 0.85);
  text-shadow: 0 5px 19px rgba(0, 0, 0, 0.5);
  background-image: linear-gradient(rgba(0, 0, 0, 0) 7%, rgba(0, 0, 0, 0.16) 100%);
}

.cover .header{
  font-size:  36rpx;
  font-weight:  bold;
  letter-spacing: 4rpx;
}

.cover .sub-header{
  font-size:  26rpx;
  font-weight:  normal;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

.cover .meta{
  font-size:  26rpx;
  margin: 9px;
}